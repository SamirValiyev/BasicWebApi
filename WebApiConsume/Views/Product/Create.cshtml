@model WebApiConsume.Models.ProductRequest

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@{
    if (TempData["Error"] !=null){
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }
}

<form asp-controller="Product" asp-action="Create" method="post">
   
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Name:</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Name"/>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Stock" class="form-label">Stock:</label>
        <input asp-for="@Model.Stock" class="form-control"  />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label">Price:</label>
        <input asp-for="@Model.Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CategoryId" class="form-label">CategoryId:</label>
        <input asp-for="@Model.CategoryId" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-danger" asp-action="Index" asp-controller="Product">Back</a>

</form>
