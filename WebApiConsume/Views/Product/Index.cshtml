@model IList<WebApiConsume.Models.ProductResponse>;
@{
    Layout = "_Layout";
}

<h2>Products</h2>
 
<a asp-action="Create" asp-controller="Product" class="btn btn-primary mb-3">Add</a>

<table class="table table-striped">

    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Stock</th>
        <th>Price</th>
        <th>CreatedDate</th>
        <th>CategoryId</th>
        <th>ImagePath</th>
        <th>Operation</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>

            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Stock</td>
            <td>@product.Price</td>
            <td>@product.CreatedDate</td>
            <td>@product.CategoryId</td>
            <td>@product.ImagePath</td>
            <td>
                <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Update</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Delete</a>
            </td>

        </tr>

    }


</table>
